import React from "react";
import ReactPlayer from "react-player";

function VideoSegmentPlayer({ videoUrl, start, end }) {
  return (
    <ReactPlayer
      url={videoUrl}
      controls
      width="100%"
      height="100%"
      playing
      light={true}
      config={{
        youtube: {
          playerVars: {
            start,
            end,
          },
        },
      }}
    />
  );
}

export default VideoSegmentPlayer;
